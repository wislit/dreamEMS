    <insert id="insertOrder" parameterType="com.dreamEMS.model.entity.Order">
        INSERT INTO ems.order (cust_no,
                        appr_no,
                        user_no,
                        sender,
                        sender_zip_code,
                        sender_addr2,
                        sender_mobile1,
                        sender_mobile2,
                        sender_mobile3,
                        sender_mobile4,
                        order_no,
                        premium_cd,
                        receive_name,
                        receive_zip_code,
                        receive_addr3,
                        receive_tel_no,
                        country_cd,
                        em_e_e,
                        tot_weight,
                        bo_y_n,
                        contents,
                        number,
                        weight,
                        value,
                        hs_code,
                        origin,
                        em_gubun,
                        req_no,
                        receive_seq,
                        regi_no,
                        pre_recev_prc,
                        prc_pay_meth_cd,
                        treat_po_regi_po_cd,
                        treat_po_regi_po_eng_nm,
                        print
                        )
