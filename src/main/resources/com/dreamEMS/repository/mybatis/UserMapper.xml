<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dreamEMS.repository.mybatis.UserMapper">

    <resultMap id="user" type="User">
        <id property="no" column="no"/>
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>

    <insert id="insertUser">
        INSERT INTO
          user (id, username, password)
        VALUES
          (#{id}, #{username}, #{password})
    </insert>

    <insert id="insertAuthority">
          INSERT INTO authority (user_id, authority_name)
          VALUES
          <foreach item="authority" index="index" collection="authorities" separator=",">
               (#{id}, #{authority})
          </foreach>
     </insert>
     
     <update id="updateUserByNo">
        UPDATE
          user
        SET
          username = #{username}
        WHERE
          no = #{no}
    </update>

    <update id="updateUserOnPasswordByNo">
        UPDATE
          user
        SET
          password = #{password}
        WHERE
          no = #{no}
    </update>

    <delete id="deleteUserByNo">
        DELETE FROM
          user
        WHERE
          no = #{no}
    </delete>
    
    <delete id="deleteUserById">
        DELETE FROM
          user
        WHERE
          id = #{id}
    </delete>
    
    <delete id="deleteAuthority">
          DELETE FROM authority WHERE user_id = #{id}
     </delete>

    <select id="selectUserByNo" resultMap="user">
        SELECT
          *
        FROM
          user
        WHERE
          no = #{no}
    </select>

    <select id="selectUserById" resultMap="user">
        SELECT
          *
        FROM
          user
        WHERE
          id = #{id}
    </select>

    <select id="selectAllUsers" resultMap="user">
        SELECT
          *
        FROM
          user
    </select>
    
    <select id="selectAuthority" resultType="org.springframework.security.core.authority.SimpleGrantedAuthority">
          SELECT authority_name FROM authority WHERE user_id = #{id}
     </select>

</mapper>