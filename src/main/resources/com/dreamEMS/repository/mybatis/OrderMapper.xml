				        #{treatPoRegiPoCd},
				        #{treatPoRegiPoEngNm},
				        #{print}
        )
    </insert>
    
    <select id="selectAllOrder" resultType="Order">
        SELECT
          *
        FROM
           ems.order
        <if test="userNo != null">
        WHERE
          user_no = #{userNo}
        AND print = 0
        </if>
    </select>
    
    <select id="selectAllPrintOrder" resultType="Order">
        SELECT
          *
        FROM
           ems.order
        <if test="userNo != null">
        WHERE
          user_no = #{userNo}
        AND print = 1
        </if>
    </select>

